<header class="navbar navbar-dark bg-dark navbar-expand flex-column flex-md-row bd-navbar ">
  <div class="container">
    <%= link_to "Pedi", root_path, id: "logo", class: "navbar-brand" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
      <span class="navbar-text">

      </span>
      </ul>
      <ul class="navbar-nav mr-auto">
        <% if logged_in? %>
          <li class="nav-item">
            <%= link_to t('Dictionaries'), dictionaries_path, class: "nav-link active" %>
          </li>
          <li class="nav-item">
            <%= link_to t('SAMPA Lists'), sampas_path, class: "nav-link active" %>
          </li>
          <li class="nav-item">
            <%= link_to t('Info'), help_path, class: "nav-link active" %>
          </li>
        <% end %>
      </ul>
        <ul class="navbar-nav mr-auto">
        <% if logged_in? %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= current_user.name %>
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <%= link_to t('My profile'), current_user, class: "dropdown-item" %>
              <div class="dropdown-divider"></div>
              <%= link_to t('Logout'), logout_path, {method: :delete, class: "dropdown-item" }%>
            </div>
          </li>
        <% else %>
          <li><%= link_to t('Login'), login_path, class: "nav-link" %></li>
            <li class="nav-item">
              <%= link_to t('Info'), help_path, class: "nav-link active" %>
            </li>
        <% end %>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= I18n.locale %>
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <%= link_to 'Íslenska', {locale: :is}, class: "dropdown-item"  %>
            <div class="dropdown-divider"></div>
            <%= link_to 'English', {locale: :en}, class: "dropdown-item"   %>
          </div>
        </li>
        </ul>
    </div>
  </div>
</header>